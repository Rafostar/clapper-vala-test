{
    "app-id": "com.github.rafostar.ClapperValaTest",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "24.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "no-autodownload": false,
            "autodelete": false
        },
        "io.github.rafostar.Clapper.Enhancers": {
            "versions": "stable;test;master",
            "directory": "extensions/clapper/enhancers",
            "merge-dirs": "plugins;python",
            "subdirectories": true,
            "add-ld-path": "lib",
            "no-autodownload": false,
            "autodelete": false
        }
    },
    "command": "clapper-vala-test",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network",
        "--own-name=org.mpris.MediaPlayer2.ClapperValaTest",
        "--env=CLAPPER_ENHANCERS_PATH=/app/extensions/clapper/enhancers/plugins",
        "--env=PYTHONPATH=/app/extensions/clapper/enhancers/python/site-packages"
    ],
    "modules": [
        "flatpak/libpeas.json",
        "flatpak/clapper.json",
        {
            "name": "clapper-vala-test",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg",
        "mkdir -p /app/extensions/clapper/enhancers"
    ]
}
