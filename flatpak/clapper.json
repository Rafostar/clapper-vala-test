{
    "name": "clapper",
    "buildsystem": "meson",
    "config-opts": [
        "-Dlibclapper=enabled",
        "-Dlibclappergtk=enabled",
        "-Dclapperapp=disabled",
        "-Dintrospection=enabled",
        "-Dvapi=enabled",
        "-Dc_args=\"-DHAVE_GST_PATCHES=1\""
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig"
    ],
    "sources": [
        {
            "type": "git",
            "url": "https://github.com/Rafostar/clapper.git",
            "branch": "libclapper"
        }
    ]
}
